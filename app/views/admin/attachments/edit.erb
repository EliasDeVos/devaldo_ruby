<div class="container-fluid">
    <h1>Edit Attachment</h1>
    <div>
        <%= form_for @attachment, url:  admin_attachment_path do |p| %>
            <div class="form-group">
                <%= p.label :name %>
                <%= p.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= collection_select(:attachment, :game_id, Game.all, :id, :name) %>
            </div>
            <div class="form-group">
                <%= p.label :image %>
                <%= p.file_field :image %>
            </div>
                <%= p.submit 'Save item', class: 'btn btn-primary' %>
                <%= link_to 'Back', admin_attachments_path, class: "btn btn-primary" %>
            <p>
            </p>
        <% end %>
    </div>
</div>
