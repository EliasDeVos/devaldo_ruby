<div class="stats-tabs">
    <div class="container">
        <div class="col-md-12">
            <h2>Klassement</h2>
            <p>
                <strong>KGDP4H - reguliere competitie</strong>
            </p>
            <table class="table table-bordered klassement">
                <tbody>
                    <tr>
                        <th></th>
                        <th class="left">Ploeg</th>
                        <th class="">GS</th>
                        <th class="hidden-xs">W</th>
                        <th class="hidden-xs">V</th>
                        <th class="hidden-xs">G</th>
                        <th class="hidden-xs">+</th>
                        <th class="hidden-xs">-</th>
                        <th>Totaal</th>
                    </tr>

                    <% @statistics.each_with_index do |statistic, i| %>
                        <tr>
                            <td class="right"><%= i%></td>
                            <td class="left"><%= statistic.name %></td>
                            <td class=""><%= statistic.games %></td>
                            <td class="hidden-xs"><%= statistic.wins %></td>
                            <td class="hidden-xs"><%= statistic.losses %></td>
                            <td class="hidden-xs"><%= statistic.draws %></td>
                            <td class="hidden-xs"><%= statistic.goalsFor %></td>
                            <td class="hidden-xs"><%= statistic.goalsAgainst %></td>
                            <td><%= statistic.points %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <% if !@games.empty? %>
            <h2>Matchen</h2>
            <p></p>
            <table class="table table-bordered klassement">
                <tbody>
                    <% @games.each do |game| %>
                        <tr>
                            <td class="right" width="40%" valign="middle"><%= game.homeTeam %></td>
                            <td class="middle" width="20%" valign="middle"><%= game.score %></td>
                            <td class="left" width="40%" valign="middle"><%= game.awayTeam %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        <% end %>
    </div>
</div>
